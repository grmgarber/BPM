<h3><%= report_year %> Report</h3>
<table>
  <thead>
  <tr>
    <th width="200">Title</th>
    <th with="70">Release Date</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= format_date(book.release_date) %></td>
      <td>
        <%= link_to image_tag('Details.png'),
                    book_path(book), title: 'Product Details' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>